<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Telephone Directory</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="AddContact">
                <span class="oi oi-plus" aria-hidden="true"></span> Add Contact
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ListContact">
                <span class="oi oi-list-rich" aria-hidden="true"></span> List Contacts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="SearchContact">
                <span class="oi oi-magnifying-glass" aria-hidden="true"></span> Search Contact
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="DeleteContact">
                <span class="oi oi-delete" aria-hidden="true"></span> Delete Contact
            </NavLink>
        </div>
    </nav>
</div>

@code {



    private bool collapseNavMenu = true;







    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;







    private void ToggleNavMenu()



    {



        collapseNavMenu = !collapseNavMenu;



    }
}
